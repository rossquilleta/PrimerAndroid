<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/activity_main" >

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@color/colorAccent"
        android:id="@+id/numA_label"
        android:text="Calculadora"
        tools:ignore="HardcodedText" />

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/numA"
        android:inputType="numberDecimal"
        android:maxLength="19"
        android:maxLines="1"/>

    <GridLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:rowCount="4"
        android:columnCount="4"
        android:padding="15sp"
        android:layout_marginTop="25sp"
        android:layout_marginRight="30sp"
        android:layout_marginLeft="30sp"
        android:id="@+id/teclado"
        tools:ignore="UnusedAttribute">

        <Button
            android:layout_height="wrap_content"
            android:layout_width="125px"
            android:id="@+id/num7"
            android:text="7"
            android:onClick=""
            tools:ignore="HardcodedText,PxUsage" />

        <Button
            android:layout_height="wrap_content"
            android:layout_width="125px"
            android:id="@+id/num8"
            android:text="8"
            tools:ignore="HardcodedText,PxUsage" />

        <Button
            android:layout_height="wrap_content"
            android:layout_width="125px"
            android:id="@+id/num9"
            android:text="9"
            tools:ignore="HardcodedText,PxUsage" />

        <Button
            android:layout_height="wrap_content"
            android:layout_width="125px"
            android:id="@+id/suma"
            android:text="+"
            tools:ignore="PxUsage" />

        <Button
            android:layout_height="wrap_content"
            android:layout_width="125px"
            android:id="@+id/num4"
            android:text="4"
            tools:ignore="HardcodedText,PxUsage" />

        <Button
            android:layout_height="wrap_content"
            android:layout_width="125px"
            android:id="@+id/num5"
            android:text="5"
            tools:ignore="HardcodedText,PxUsage" />

        <Button
            android:layout_height="wrap_content"
            android:layout_width="125px"
            android:id="@+id/num6"
            android:text="6"
            tools:ignore="HardcodedText,PxUsage" />

        <Button
            android:layout_height="wrap_content"
            android:layout_width="125px"
            android:id="@+id/resta"
            android:text="-"
            tools:ignore="HardcodedText,PxUsage" />

        <Button
            android:layout_height="wrap_content"
            android:layout_width="125px"
            android:id="@+id/num1"
            android:text="1"
            tools:ignore="HardcodedText,PxUsage" />

        <Button
            android:layout_height="wrap_content"
            android:layout_width="125px"
            android:id="@+id/num2"
            android:text="2"
            tools:ignore="HardcodedText,PxUsage" />

        <Button
            android:layout_height="wrap_content"
            android:layout_width="125px"
            android:id="@+id/num3"
            android:text="3"
            tools:ignore="HardcodedText,PxUsage" />

        <Button
            android:layout_height="wrap_content"
            android:layout_width="125px"
            android:id="@+id/multipli"
            android:text="x"
            tools:ignore="HardcodedText,PxUsage" />

        <Button
            android:layout_height="wrap_content"
            android:layout_width="125px"
            android:id="@+id/coma"
            android:text="."
            android:onClick="decimal"
            tools:ignore="HardcodedText,PxUsage" />

        <Button
            android:layout_height="wrap_content"
            android:layout_width="125px"
            android:id="@+id/num0"
            android:text="0"
            tools:ignore="HardcodedText,PxUsage" />

        <Button
            android:layout_height="wrap_content"
            android:layout_width="125px"
            android:id="@+id/resetear"
            android:text="C"
            tools:ignore="HardcodedText,PxUsage" />

        <Button
            android:layout_height="wrap_content"
            android:layout_width="125px"
            android:id="@+id/div"
            android:text="/"
            tools:ignore="HardcodedText,PxUsage" />

    </GridLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/igual"
        android:text="="
        tools:ignore="HardcodeText,HardcodedText" />
    <!--
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/resultado"
            android:text="Resultado"
            tools:ignore="HardcodedText" />

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/Result_Edit"
            android:enabled="false"
            tools:ignore="TextFields" />  -->
</LinearLayout>